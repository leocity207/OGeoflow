digraph Project {
  graph [splines=true, overlap=false, rankdir=LR];
  node [shape=box, style=filled, fontname="Helvetica"];
  edge [fontname="Helvetica", penwidth=5];

  // --- Nodes with types (colors) ---
  // classes (red)
  "O::Bounded_Vector" [fillcolor="#e84141", fontcolor="white"];
  "O::GeoJSON::IO::Feature_Parser" [fillcolor="#e84141", fontcolor="white"];
  "O::GeoJSON::IO::Full_Parser" [fillcolor="#e84141", fontcolor="white"];
  "O::GeoJSON::IO::SAX_Parser" [fillcolor="#e84141", fontcolor="white"];
  "O::GeoJSON::IO::Writer" [fillcolor="#e84141", fontcolor="white"];

  // enum (blue)
  "O::GeoJSON::IO::Error" [fillcolor="#3498db", fontcolor="white"];

  // structs (green)
  "O::GeoJSON::Geometry_Collection" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Line_String" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Multi_Line_String" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Multi_Point" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Multi_Polygon" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Point" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Polygon" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Feature_Collection" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Feature" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Geometry" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Bbox" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Position" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Property" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Root" [fillcolor="#2ecc71", fontcolor="black"];
  "O::GeoJSON::Filter::Feature" [fillcolor="#2ecc71", fontcolor="black"];

  "O::DCEL::Vertex" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Half_Edge" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Face" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Storage" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Builder" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Exporter" [fillcolor="#2ecc71", fontcolor="black"];
  "O::DCEL::Feature_Info" [fillcolor="#2ecc71", fontcolor="black"];

  // --- Clusters (matrioshka) ---
  subgraph cluster_O {
    label="O";
    color="#555555";
    style="rounded,filled";
    fillcolor="#f7f7f7";

    // top-level node(s) in O
    "O::Bounded_Vector";

    // GeoJSON cluster
    subgraph cluster_O_GeoJSON {
      label="O::GeoJSON";
      color="#2b7fbf";
      style="rounded,filled";
      fillcolor="#eef6fb";

      // IO cluster inside GeoJSON
      subgraph cluster_O_GeoJSON_IO {
        label="O::GeoJSON::IO";
        color="#2b9f4f";
        style="rounded,filled";
        fillcolor="#f3fbef";

        "O::GeoJSON::IO::Feature_Parser";
        "O::GeoJSON::IO::Full_Parser";
        "O::GeoJSON::IO::SAX_Parser";
        "O::GeoJSON::IO::Writer";
        "O::GeoJSON::IO::Error";
      }

      // Filter cluster inside GeoJSON
      subgraph cluster_O_GeoJSON_Filter {
        label="O::GeoJSON::Filter";
        color="#b45f9a";
        style="rounded,filled";
        fillcolor="#fbf0fb";

        "O::GeoJSON::Filter::Feature";
      }

      // geometry & feature nodes
      "O::GeoJSON::Geometry_Collection";
      "O::GeoJSON::Line_String";
      "O::GeoJSON::Multi_Line_String";
      "O::GeoJSON::Multi_Point";
      "O::GeoJSON::Multi_Polygon";
      "O::GeoJSON::Point";
      "O::GeoJSON::Polygon";
      "O::GeoJSON::Feature_Collection";
      "O::GeoJSON::Feature";
      "O::GeoJSON::Geometry";
      "O::GeoJSON::Bbox";
      "O::GeoJSON::Position";
      "O::GeoJSON::Property";
      "O::GeoJSON::Root";
    }

    // DCEL cluster
    subgraph cluster_O_DCEL {
      label="O::DCEL";
      color="#a0522d";
      style="rounded,filled";
      fillcolor="#fbf6ef";

      "O::DCEL::Vertex";
      "O::DCEL::Half_Edge";
      "O::DCEL::Face";
      "O::DCEL::Storage";
      "O::DCEL::Builder";
      "O::DCEL::Exporter";
      "O::DCEL::Feature_Info";
    }
  }
  "O::DCEL::Vertex" -> "O::GeoJSON::Geometry_Collection" [style=invis]
  "O::GeoJSON::Geometry_Collection" -> "O::GeoJSON::IO::Feature_Parser" [style=invis]
}